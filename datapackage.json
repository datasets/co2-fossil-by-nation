        {
          "name": "fossil-fuel-co2-emissions-by-nation",
          "transform": [
            {
              "type": "filter",
              "expression": "data['Year'] == 2014"
            },
            {
              "type": "filter",
              "expression": "data['Total'] > 50000"
            }
          ]
        }
      ],
      "specType": "vega",
      "spec": {
        "title": "Countries by carbon emission in 2014 (with >50,000). Values are million kg of C.",
